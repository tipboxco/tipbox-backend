{
  "tech_stack": [
    "TypeScript",
    "Node.js",
    "Express",
    "Prisma",
    "PostgreSQL",
    "Redis",
    "BullMQ",
    "Jest",
    "MinIO/S3"
  ],
  "features": [
    {
      "name": "Authentication API",
      "description": "User signup, login, token issuance, and verification flows handled via Express routes and AuthService.",
      "files": [
        "src/interfaces/auth/auth.router.ts",
        "src/application/auth/auth.service.ts",
        "src/infrastructure/repositories/user-prisma.repository.ts"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "info": {
          "title": "Auth API",
          "version": "1.0.0"
        },
        "paths": {
          "/auth/login": {
            "post": {
              "summary": "Authenticate with email/password to obtain JWT tokens",
              "requestBody": {
                "required": true,
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "email": {
                          "type": "string",
                          "format": "email"
                        },
                        "password": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "email",
                        "password"
                      ]
                    }
                  }
                }
              },
              "responses": {
                "200": {
                  "description": "Login success",
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "format": "uuid"
                          },
                          "token": {
                            "type": "string"
                          },
                          "refreshToken": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                },
                "401": {
                  "description": "Invalid credentials"
                }
              }
            }
          },
          "/auth/register": {
            "post": {
              "summary": "Create a new Tipbox account",
              "requestBody": {
                "required": true,
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "email": {
                          "type": "string",
                          "format": "email"
                        },
                        "password": {
                          "type": "string",
                          "minLength": 8
                        },
                        "name": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "email",
                        "password",
                        "name"
                      ]
                    }
                  }
                }
              },
              "responses": {
                "201": {
                  "description": "Account created"
                },
                "400": {
                  "description": "Validation error"
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "Posts API",
      "description": "Create and manage user posts (free, tips, benchmark, question, experience, update) with MinIO media uploads and Prisma persistence.",
      "files": [
        "src/interfaces/post/post.router.ts",
        "src/application/post/post.service.ts",
        "src/infrastructure/repositories/content-post-prisma.repository.ts",
        "src/infrastructure/s3/s3.service.ts"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "info": {
          "title": "Posts API",
          "version": "1.0.0"
        },
        "paths": {
          "/posts/free": {
            "post": {
              "summary": "Create a free-form post for a given context.",
              "security": [
                {
                  "bearerAuth": []
                }
              ],
              "requestBody": {
                "required": true,
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "contextType": {
                          "type": "string",
                          "enum": [
                            "sub_category",
                            "product_group",
                            "product"
                          ]
                        },
                        "contextId": {
                          "type": "string",
                          "format": "uuid"
                        },
                        "description": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "contextType",
                        "contextId",
                        "description"
                      ]
                    }
                  }
                }
              },
              "responses": {
                "201": {
                  "description": "Post created",
                  "content": {
                    "application/json": {
                      "schema": {
                        "$ref": "#/components/schemas/Post"
                      }
                    }
                  }
                },
                "400": {
                  "description": "Validation error"
                },
                "401": {
                  "description": "Unauthorized"
                }
              }
            }
          },
          "/posts/boost-options": {
            "get": {
              "summary": "List boost options for promoted posts.",
              "security": [
                {
                  "bearerAuth": []
                }
              ],
              "responses": {
                "200": {
                  "description": "Boost options returned.",
                  "content": {
                    "application/json": {
                      "schema": {
                        "type": "array",
                        "items": {
                          "$ref": "#/components/schemas/BoostOption"
                        }
                      }
                    }
                  }
                },
                "401": {
                  "description": "Unauthorized"
                }
              }
            }
          }
        },
        "components": {
          "securitySchemes": {
            "bearerAuth": {
              "type": "http",
              "scheme": "bearer",
              "bearerFormat": "JWT"
            }
          },
          "schemas": {
            "Post": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "format": "uuid"
                },
                "type": {
                  "type": "string"
                },
                "body": {
                  "type": "string"
                },
                "userId": {
                  "type": "string",
                  "format": "uuid"
                }
              }
            },
            "BoostOption": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "price": {
                  "type": "number"
                }
              }
            }
          }
        }
      }
    }
  ]
}

