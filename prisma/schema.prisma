generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===== USER RELATED MODELS =====

model User {
  id           String   @id @db.Uuid @default(uuid())
  email        String?  @unique
  passwordHash String?  @map("password_hash")
  status       String?
  emailVerified Boolean  @default(false) @map("email_verified")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  profile              Profile?
  settings             UserSettings?
  trustRelationsAsTarget TrustRelation[] @relation("TrusterRelation")
  trustRelationsAsTrusted TrustRelation[] @relation("TrustedUserRelation")
  trustScores          UserTrustScore[]
  roles                UserRole[]
  feedPreferences      UserFeedPreferences?
  avatars              UserAvatar[]
  titles               UserTitle[]
  collections          UserCollection[]
  loginAttempts        LoginAttempt[]
  passwordResetTokens  PasswordResetToken[]
  emailVerificationCodes EmailVerificationCode[]
  productSuggestions   ProductSuggestion[]
  reviewedSuggestions  ProductSuggestion[] @relation("ProductSuggestionReviewer")
  inventories          Inventory[]
  contentPosts         ContentPost[]
  contentComments      ContentComment[]
  contentLikes         ContentLike[]
  contentFavorites     ContentFavorite[]
  contentCollections   ContentCollection[]
  contentRatings       ContentRating[]
  contentCommentVotes  ContentCommentVote[]
  contentPostViews     ContentPostView[]
  userBadges           UserBadge[]
  userAchievements     UserAchievement[]
  rewardClaims         RewardClaim[]
  bridgePosts          BridgePost[]
  brandSurveyAnswers   BrandSurveyAnswer[]
  bridgeFollowers      BridgeFollower[]
  bridgeUserStats      BridgeUserStats[]
  bridgeLeaderboards   BridgeLeaderboard[]
  bridgeRewards        BridgeReward[]
  wallets              Wallet[]
  sentTips             TipsTokenTransfer[] @relation("SentTips")
  receivedTips         TipsTokenTransfer[] @relation("ReceivedTips")
  nftTransactionsSent  NFTTransaction[] @relation("NFTSender")
  nftTransactionsReceived NFTTransaction[] @relation("NFTReceiver")
  nftMarketListings    NFTMarketListing[]
  lootboxes            Lootbox[]
  nftClaims            NFTClaim[]
  scenarioChoices      ScenarioChoice[]
  choiceComments       ChoiceComment[]
  wishboxStats         WishboxStats[]
  wishboxRewards       WishboxReward[]
  dmThreadsAsUserOne   DMThread[] @relation("DMThreadUserOne")
  dmThreadsAsUserTwo   DMThread[] @relation("DMThreadUserTwo")
  dmMessages           DMMessage[]
  dmRequestsSent       DMRequest[] @relation("DMRequestSender")
  dmRequestsReceived   DMRequest[] @relation("DMRequestReceiver")
  dmSupportSessions    DMSupportSession[]
  feeds                Feed[]
  adminLogs            AdminLog[]
  moderatorActions     ModerationAction[] @relation("ModeratorActions")
  moderatedActions     ModerationAction[] @relation("ModeratedActions")
  manualReviewFlags    ManualReviewFlag[]
  userKycRecords       UserKycRecord[]

  // Block/Mute relations
  userBlocksAsBlocker  UserBlock[]        @relation("BlockerRelation")
  userBlocksAsBlocked  UserBlock[]        @relation("BlockedUserRelation")
  userMutesAsMuter     UserMute[]         @relation("MuterRelation")
  userMutesAsMuted     UserMute[]         @relation("MutedUserRelation")

  @@map("users")
}

model Profile {
  id          String    @id @db.Uuid @default(uuid())
  userId      String    @unique @map("user_id") @db.Uuid
  displayName String?   @map("display_name")
  userName    String?   @unique @map("user_name")
  bio         String?
  bannerUrl   String?   @map("banner_url")
  country     String?
  birthDate   DateTime? @map("birth_date") @db.Date
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("profiles")
}

model UserSettings {
  id                   String             @id @db.Uuid @default(uuid())
  userId               String             @unique @map("user_id") @db.Uuid
  themeId              String?            @map("theme_id") @db.Uuid
  receiveNotifications Boolean?           @map("receive_notifications")
  visibility           UserVisibility?
  createdAt            DateTime           @default(now()) @map("created_at")
  updatedAt            DateTime           @updatedAt @map("updated_at")

  // Relations
  user  User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  theme UserTheme? @relation(fields: [themeId], references: [id])

  @@map("user_settings")
}

model TrustRelation {
  id            String   @id @db.Uuid @default(uuid())
  trusterId     String   @map("truster_id") @db.Uuid
  trustedUserId String   @map("trusted_user_id") @db.Uuid
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  // Relations
  truster     User @relation("TrusterRelation", fields: [trusterId], references: [id], onDelete: Cascade)
  trustedUser User @relation("TrustedUserRelation", fields: [trustedUserId], references: [id], onDelete: Cascade)

  @@unique([trusterId, trustedUserId])
  @@map("trust_relations")
}

// Kullanıcı engelleme ilişkisi (Block)
model UserBlock {
  id           String   @id @db.Uuid @default(uuid())
  blockerId    String   @map("blocker_id") @db.Uuid
  blockedUserId String  @map("blocked_user_id") @db.Uuid
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  blocker     User @relation("BlockerRelation", fields: [blockerId], references: [id], onDelete: Cascade)
  blockedUser User @relation("BlockedUserRelation", fields: [blockedUserId], references: [id], onDelete: Cascade)

  @@unique([blockerId, blockedUserId])
  @@map("user_blocks")
}

// Kullanıcı susturma ilişkisi (Mute)
model UserMute {
  id           String   @id @db.Uuid @default(uuid())
  muterId      String   @map("muter_id") @db.Uuid
  mutedUserId  String   @map("muted_user_id") @db.Uuid
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  muter     User @relation("MuterRelation", fields: [muterId], references: [id], onDelete: Cascade)
  mutedUser User @relation("MutedUserRelation", fields: [mutedUserId], references: [id], onDelete: Cascade)

  @@unique([muterId, mutedUserId])
  @@map("user_mutes")
}

model UserTrustScore {
  id           String   @id @db.Uuid @default(uuid())
  userId       String   @map("user_id") @db.Uuid
  score        Float
  reason       String?
  calculatedAt DateTime @default(now()) @map("calculated_at")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_trust_scores")
}

model UserRole {
  id        String   @id @db.Uuid @default(uuid())
  userId    String   @map("user_id") @db.Uuid
  role      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_roles")
}

model UserFeedPreferences {
  id                     String   @id @db.Uuid @default(uuid())
  userId                 String   @unique @map("user_id") @db.Uuid
  preferredCategories    String?  @map("preferred_categories")
  preferredContentTypes  String?  @map("preferred_content_types")
  language               String?
  createdAt              DateTime @default(now()) @map("created_at")
  updatedAt              DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_feed_preferences")
}

model UserAvatar {
  id        String   @id @db.Uuid @default(uuid())
  userId    String   @map("user_id") @db.Uuid
  imageUrl  String   @map("image_url")
  isActive  Boolean  @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_avatars")
}

model UserKycRecord {
  id                String        @id @db.Uuid @default(uuid())
  userId            String        @map("user_id") @db.Uuid
  sumsubApplicantId String        @unique @map("sumsub_applicant_id")
  reviewStatus      KycReviewStatus @map("review_status") @default(INIT)
  reviewResult      KycReviewResult @map("review_result") @default(NULL)
  reviewReason      String?       @map("review_reason")
  kycLevel          String?       @map("kyc_level")
  provider          KycProvider   @default(SUMSUB)
  createdAt         DateTime      @default(now()) @map("created_at")
  updatedAt         DateTime      @updatedAt @map("updated_at")
  lastUpdatedAt     DateTime      @default(now()) @map("last_updated_at")
  lastSyncedAt      DateTime?     @map("last_synced_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_kyc_records")
}

model UserTheme {
  id          String   @id @db.Uuid @default(uuid())
  name        String
  description String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  userSettings UserSettings[]

  @@map("user_themes")
}

model UserTitle {
  id        String   @id @db.Uuid @default(uuid())
  userId    String   @map("user_id") @db.Uuid
  title     String
  earnedAt  DateTime @default(now()) @map("earned_at")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_titles")
}

model UserCollection {
  id          String   @id @db.Uuid @default(uuid())
  userId      String   @map("user_id") @db.Uuid
  name        String
  description String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_collections")
}

model LoginAttempt {
  id          String            @id @db.Uuid @default(uuid())
  userId      String?           @map("user_id") @db.Uuid
  ipAddress   String            @map("ip_address")
  userAgent   String            @map("user_agent")
  status      LoginAttemptStatus
  attemptedAt DateTime          @default(now()) @map("attempted_at")

  // Relations
  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("login_attempts")
}

model PasswordResetToken {
  id        String   @id @db.Uuid @default(uuid())
  userId    String   @map("user_id") @db.Uuid
  token     String   @unique
  isUsed    Boolean  @default(false) @map("is_used")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("password_reset_tokens")
}

model EmailVerificationCode {
  id        String   @id @db.Uuid @default(uuid())
  userId    String   @map("user_id") @db.Uuid
  email     String
  code      String   @db.VarChar(6)
  isUsed    Boolean  @default(false) @map("is_used")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, code])
  @@index([email, code])
  @@map("email_verification_codes")
}

// ===== ENUMS =====

enum KycReviewStatus {
  INIT
  PENDING
  COMPLETED
  DECLINED
  ON_HOLD

  @@map("kyc_review_status")
}

enum KycReviewResult {
  NULL
  GREEN
  YELLOW
  RED

  @@map("kyc_review_result")
}

enum KycProvider {
  SUMSUB

  @@map("kyc_provider")
}

enum UserVisibility {
  PUBLIC
  PRIVATE
  FRIENDS_ONLY

  @@map("user_visibility")
}

enum LoginAttemptStatus {
  SUCCESS
  FAILED  
  LOCKED

  @@map("login_attempt_status")
}

// ===== CATEGORY & PRODUCT MODELS =====

model MainCategory {
  id          String   @id @db.Uuid @default(uuid())
  name        String
  description String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  subCategories SubCategory[]
  contentPosts  ContentPost[]

  @@map("main_categories")
}

model SubCategory {
  id             String   @id @db.Uuid @default(uuid())
  mainCategoryId String   @map("main_category_id") @db.Uuid
  name           String
  description    String?
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  // Relations
  mainCategory  MainCategory  @relation(fields: [mainCategoryId], references: [id], onDelete: Cascade)
  productGroups ProductGroup[]
  contentPosts  ContentPost[]

  @@map("sub_categories")
}

model ProductGroup {
  id            String   @id @db.Uuid @default(uuid())
  subCategoryId String   @map("sub_category_id") @db.Uuid
  name          String
  description   String?
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  // Relations
  subCategory SubCategory @relation(fields: [subCategoryId], references: [id], onDelete: Cascade)
  products    Product[]
  contentPosts ContentPost[]

  @@map("product_groups")
}

model Product {
  id          String   @id @db.Uuid @default(uuid())
  name        String
  brand       String?
  description String?
  groupId     String?  @map("group_id") @db.Uuid
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  group                ProductGroup? @relation(fields: [groupId], references: [id])
  inventories          Inventory[]
  contentPosts         ContentPost[]
  questionPosts        PostQuestion[]
  comparisonProduct1   PostComparison[] @relation("ComparisonProduct1")
  comparisonProduct2   PostComparison[] @relation("ComparisonProduct2")

  @@map("products")
}

model ProductSuggestion {
  id            String                     @id @db.Uuid @default(uuid())
  userId        String                     @map("user_id") @db.Uuid
  suggestedName String                     @map("suggested_name")
  suggestedBrand String?                   @map("suggested_brand")
  description   String?
  reason        String?
  status        ProductSuggestionStatus    @default(PENDING)
  createdAt     DateTime                   @default(now()) @map("created_at")
  updatedAt     DateTime                   @updatedAt @map("updated_at")
  reviewedAt    DateTime?                  @map("reviewed_at")
  reviewedBy    String?                    @map("reviewed_by") @db.Uuid

  // Relations
  user     User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  reviewer User? @relation("ProductSuggestionReviewer", fields: [reviewedBy], references: [id])

  @@map("product_suggestions")
}

// ===== UPDATED ENUMS =====

enum ProductSuggestionStatus {
  PENDING
  APPROVED
  REJECTED

  @@map("product_suggestion_status")
}

// ===== INVENTORY SYSTEM MODELS =====

model Inventory {
  id                String   @id @db.Uuid @default(uuid())
  userId            String   @map("user_id") @db.Uuid
  productId         String   @map("product_id") @db.Uuid
  hasOwned          Boolean  @map("has_owned")
  experienceSummary String?  @map("experience_summary")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  // Relations
  user               User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  product            Product             @relation(fields: [productId], references: [id], onDelete: Cascade)
  productExperiences ProductExperience[]
  media              InventoryMedia[]

  @@unique([userId, productId])
  @@map("inventories")
}

model ProductExperience {
  id             String   @id @db.Uuid @default(uuid())
  inventoryId    String   @map("inventory_id") @db.Uuid
  title          String
  experienceText String   @map("experience_text")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  // Relations
  inventory Inventory @relation(fields: [inventoryId], references: [id], onDelete: Cascade)

  @@map("product_experiences")
}

model InventoryMedia {
  id          String           @id @db.Uuid @default(uuid())
  inventoryId String           @map("inventory_id") @db.Uuid
  mediaUrl    String           @map("media_url")
  type        InventoryMediaType
  uploadedAt  DateTime         @default(now()) @map("uploaded_at")
  createdAt   DateTime         @default(now()) @map("created_at")
  updatedAt   DateTime         @updatedAt @map("updated_at")

  // Relations
  inventory Inventory @relation(fields: [inventoryId], references: [id], onDelete: Cascade)

  @@map("inventory_media")
}

// ===== UPDATED ENUMS =====

enum InventoryMediaType {
  IMAGE
  VIDEO

  @@map("inventory_media_type")
}

// ===== CONTENT SYSTEM MODELS =====

model ContentPost {
  id               String          @id @db.VarChar(26)
  userId           String          @map("user_id") @db.Uuid
  type             ContentPostType
  title            String
  body             String
  mainCategoryId   String?         @map("main_category_id") @db.Uuid
  subCategoryId    String?         @map("sub_category_id") @db.Uuid
  productGroupId   String?         @map("product_group_id") @db.Uuid
  productId        String?         @map("product_id") @db.Uuid
  inventoryRequired Boolean        @map("inventory_required")
  isBoosted        Boolean         @map("is_boosted")
  boostedUntil     DateTime?       @map("boosted_until")
  createdAt        DateTime        @default(now()) @map("created_at")
  updatedAt        DateTime        @updatedAt @map("updated_at")

  // Relations
  user          User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  mainCategory  MainCategory?    @relation(fields: [mainCategoryId], references: [id])
  subCategory   SubCategory?     @relation(fields: [subCategoryId], references: [id])
  productGroup  ProductGroup?    @relation(fields: [productGroupId], references: [id])
  product       Product?         @relation(fields: [productId], references: [id])
  question            PostQuestion?
  comparison          PostComparison?
  tip                 PostTip?
  tags                PostTag[]
  comments            ContentComment[]
  likes               ContentLike[]
  favorites           ContentFavorite[]
  views               ContentPostView[]
  topCommunityChoices TopCommunityChoice[]
  feeds               Feed[]
  feedHighlights      FeedHighlight[]
  trendingPosts       TrendingPost[]
  contentPostTags     ContentPostTag[]

  @@map("content_posts")
}

model PostQuestion {
  id                   String                 @id @db.Uuid @default(uuid())
  postId               String                 @unique @map("post_id") @db.VarChar(26)
  expectedAnswerFormat QuestionAnswerFormat   @map("expected_answer_format")
  relatedProductId     String?                @map("related_product_id") @db.Uuid
  createdAt            DateTime               @default(now()) @map("created_at")
  updatedAt            DateTime               @updatedAt @map("updated_at")

  // Relations
  post           ContentPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  relatedProduct Product?    @relation(fields: [relatedProductId], references: [id])

  @@map("post_questions")
}

model PostComparison {
  id                String   @id @db.Uuid @default(uuid())
  postId            String   @unique @map("post_id") @db.VarChar(26)
  product1Id        String   @map("product_1_id") @db.Uuid
  product2Id        String   @map("product_2_id") @db.Uuid
  comparisonSummary String?  @map("comparison_summary")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  // Relations
  post     ContentPost              @relation(fields: [postId], references: [id], onDelete: Cascade)
  product1 Product                  @relation("ComparisonProduct1", fields: [product1Id], references: [id])
  product2 Product                  @relation("ComparisonProduct2", fields: [product2Id], references: [id])
  scores   PostComparisonScore[]

  @@map("post_comparisons")
}

model ComparisonMetric {
  id          String   @id @db.Uuid @default(uuid())
  name        String
  description String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  comparisonScores PostComparisonScore[]

  @@map("comparison_metrics")
}

model PostComparisonScore {
  id           String   @id @db.Uuid @default(uuid())
  comparisonId String   @map("comparison_id") @db.Uuid
  metricId     String   @map("metric_id") @db.Uuid
  scoreProduct1 Int     @map("score_product_1")
  scoreProduct2 Int     @map("score_product_2")
  comment      String?
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  comparison PostComparison   @relation(fields: [comparisonId], references: [id], onDelete: Cascade)
  metric     ComparisonMetric @relation(fields: [metricId], references: [id])

  @@unique([comparisonId, metricId])
  @@map("post_comparison_scores")
}

model PostTip {
  id          String      @id @db.Uuid @default(uuid())
  postId      String      @unique @map("post_id") @db.VarChar(26)
  tipCategory TipCategory @map("tip_category")
  isVerified  Boolean     @map("is_verified")
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")

  // Relations
  post ContentPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@map("post_tips")
}

model PostTag {
  id        String   @id @db.Uuid @default(uuid())
  postId    String   @map("post_id") @db.VarChar(26)
  tag       String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  post ContentPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@map("post_tags")
}

model ContentPostTag {
  id        String   @id @db.Uuid @default(uuid())
  postId    String   @map("post_id") @db.VarChar(26)
  tag       String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  post ContentPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@map("content_post_tags")
}

// ===== UPDATED ENUMS =====

enum ContentPostType {
  FREE
  TIPS
  COMPARE
  QUESTION

  @@map("content_post_type")
}

enum QuestionAnswerFormat {
  SHORT
  LONG
  POLL
  CHOICE

  @@map("question_answer_format")
}

enum TipCategory {
  USAGE
  PURCHASE
  CARE
  OTHER

  @@map("tip_category")
}

// ===== CONTENT INTERACTION MODELS =====

model ContentComment {
  id        String   @id @db.VarChar(26)
  postId    String   @map("post_id") @db.VarChar(26)
  userId    String   @map("user_id") @db.Uuid
  parentId  String?  @map("parent_id") @db.VarChar(26)
  comment   String
  isAnswer  Boolean  @map("is_answer")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  post     ContentPost      @relation(fields: [postId], references: [id], onDelete: Cascade)
  user     User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent   ContentComment?  @relation("CommentReplies", fields: [parentId], references: [id])
  replies  ContentComment[] @relation("CommentReplies")
  likes    ContentLike[]
  votes    ContentCommentVote[]
  ratings  ContentRating[]

  @@map("content_comments")
}

model ContentLike {
  id        String   @id @db.Uuid @default(uuid())
  userId    String   @map("user_id") @db.Uuid
  postId    String?  @map("post_id") @db.VarChar(26)
  commentId String?  @map("comment_id") @db.VarChar(26)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  user    User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  post    ContentPost?    @relation(fields: [postId], references: [id], onDelete: Cascade)
